<Window x:Class="Encryption_Utility.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Encryption Manager" Height="710" Width="870" Background="LightSkyBlue">
    <Grid>
        <Label Margin="10,0,0,0" >Input</Label>
            <TextBox Name="txtInput" HorizontalAlignment="Left" Height="300" Width="800" Margin="10,20,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  AcceptsReturn="True"/>
        <Label Margin="10,320,0,0">Output</Label>
        <TextBox Name="txtOutput" HorizontalAlignment="Left" Height="300" Width="800" Margin="10,340,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"  AcceptsReturn="True"/>
       
        <StackPanel Orientation="Vertical" >
            <StackPanel Orientation="Horizontal">
                <Button Name="btnEncrypt" Content="Encrypt" Click="btnEncrypt_Click" Margin="50,650,10,0" Background="Green" Foreground="Wheat"/>

                <Button x:Name="btnDecrypt" Content="Decrypt" Click="btnDecrypt_Click" Margin="600,650,10,0" Background="Maroon" Foreground="White" />
            </StackPanel>
           
        </StackPanel>
    </Grid>
</Window>
